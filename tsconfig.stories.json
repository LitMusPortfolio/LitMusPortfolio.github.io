{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "noEmit": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src/**/*.stories.tsx",
    "src/**/*.tsx",
    "src/**/*.ts",
    ".storybook/**/*"
  ],
  "exclude": [
    "src/**/*.test.tsx",
    "src/**/*.test.ts",
    "src/test/**/*"
  ]
}
